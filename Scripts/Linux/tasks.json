{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cp",
            "type": "shell",
            "command": "",
            "args": [
                "g++",
                "-Wall",
                "-std=c++20",
                "-O2",
                "-DLOCAL",
                "\"${file}\"",
                "-o",
                "\"${fileDirname}/${fileBasenameNoExtension}\"",
                "&&",
                "\"${fileDirname}/${fileBasenameNoExtension}\"",
                "<",
                "input.in",
                ">",
                "output.out",
                "2>",
                "error.log"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": ["relative", "${workspaceRoot}"],
                "pattern": {
                "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                "file": 1,
                "line": 2,
                "column": 3,
                "severity": 4,
                "message": 5
                }
            }
        }
    ]
}